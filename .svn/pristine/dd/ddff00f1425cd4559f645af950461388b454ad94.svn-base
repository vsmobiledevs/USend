<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvPackage"
        style="@style/MaterialCardStyle"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        app:cardUseCompatPadding="false" android:tag="layout/row_package_details_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            style="@style/match"
            android:orientation="vertical">

            <LinearLayout
                style="@style/match"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtPackageNumber"
                    style="@style/CommonText.Style.SemiBold.16sp"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:singleLine="true"
                    android:text="@string/lbl_package_number"
                    android:textColor="@color/color2D2D2D"
                    android:textSize="@dimen/dimen_14sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtPackageID"
                    style="@style/CommonText.Style.SemiBold.16sp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:gravity="center"
                    android:text="#PKG1236"
                    android:textAlignment="center"
                    android:textColor="@color/color154A99"
                    android:textSize="@dimen/dimen_14sp" />

            </LinearLayout>

            <RelativeLayout
                style="@style/matchWrap"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_20dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtDimensionsTitle"
                    style="@style/CommonText.Style.14sp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/lbl_dimensions_colon"
                    android:textColor="@color/color802D2D2D" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtDimensions"
                    style="@style/CommonText.Style.SemiBold.16sp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins_medium"
                    android:text="00"
                    android:textColor="@color/color2D2D2D" />

            </RelativeLayout>

            <RelativeLayout
                style="@style/matchWrap"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtWeightTitle"
                    style="@style/CommonText.Style.14sp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/lbl_weight_colon"
                    android:textColor="@color/color802D2D2D" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtWeight"
                    style="@style/CommonText.Style.SemiBold.16sp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins_medium"
                    android:text="00 Kg"
                    android:textColor="@color/color2D2D2D" />

            </RelativeLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

         