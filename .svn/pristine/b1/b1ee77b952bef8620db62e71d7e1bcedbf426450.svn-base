<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                        

    

           

    <LinearLayout
        style="@style/match"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        tools:context=".views.home.ConciergeItemDetailActivity" android:tag="layout/activity_concierge_item_detail_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

        <include
            android:id="@+id/toolbarConciergeDetail"
            layout="@layout/app_toolbar" />

        <ScrollView style="@style/styleScrollbar">

            <LinearLayout
                style="@style/match"
                android:orientation="vertical"
                android:paddingStart="@dimen/dimen_20dp"
                android:paddingBottom="@dimen/dimen_20dp"
                android:paddingEnd="@dimen/dimen_20dp">

                <RelativeLayout style="@style/matchWrap"
                    android:layout_marginTop="@dimen/dimen_15dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgConciergeItem"
                        android:layout_width="@dimen/dimen_80dp"
                        android:layout_height="@dimen/dimen_80dp"
                        android:scaleType="fitXY"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_package_place_holder" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtStatusTitle"
                        style="@style/CommonText.Style.14sp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/lbl_status" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtStatus"
                        style="@style/CommonText.Style.14sp"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:layout_below="@+id/txtStatusTitle"
                        android:text="@string/lbl_processing"
                        android:textColor="@color/colorEEBB2E"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/CommonText.Style.14sp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/dimen_25dp"
                    android:text="@string/lbl_product_name_colon"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtProductName"
                    style="@style/CommonText.Style.14sp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/dimen_12sp"
                    android:singleLine="false"
                    android:textColor="@color/color2D2D2D"
                    android:text="@string/lbl_product_name"/>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/CommonText.Style.14sp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/dimen_25dp"
                    android:text="@string/lbl_website_link_colon"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtWebSite"
                    style="@style/CommonText.Style.14sp"
                    android:includeFontPadding="false"
                    android:singleLine="false"
                    android:layout_marginTop="@dimen/dimen_7dp"
                    android:paddingTop="@dimen/dimen_5dp"
                    android:paddingBottom="@dimen/dimen_5dp"
                    android:textColor="@color/color154A99"
                    android:text="-"/>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/CommonText.Style.14sp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:text="@string/lbl_req_on"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtReqOn"
                    style="@style/CommonText.Style.14sp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/dimen_12sp"
                    android:textColor="@color/color2D2D2D"
                    android:text="-"/>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/CommonText.Style.14sp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/dimen_25dp"
                    android:text="@string/lbl_product_cost"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtCost"
                    style="@style/CommonText.Style.14sp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/dimen_12sp"
                    android:textColor="@color/color2D2D2D"
                    android:text="$0"/>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/CommonText.Style.14sp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/dimen_25dp"
                    android:text="@string/lbl_transaction_date"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtTransactionDate"
                    style="@style/CommonText.Style.14sp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/dimen_12sp"
                    android:textColor="@color/color2D2D2D"
                    android:text=""/>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/CommonText.Style.14sp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/dimen_25dp"
                    android:text="@string/lbl_paid_amount"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtPaidAmount"
                    style="@style/CommonText.Style.14sp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/dimen_12sp"
                    android:textColor="@color/color2D2D2D"
                    android:text="$"/>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/CommonText.Style.14sp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/dimen_25dp"
                    android:text="@string/lbl_desc_size_colon"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtDescSize"
                    style="@style/CommonText.Style.14sp"
                    android:includeFontPadding="false"
                    android:singleLine="false"
                    android:layout_marginTop="@dimen/dimen_12sp"
                    android:textColor="@color/color2D2D2D"
                    android:text="@string/lbl_desc"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lbl_note"
                    style="@style/CommonText.Style.14sp"
                    android:includeFontPadding="false"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dimen_25dp"
                    android:text="@string/lbl_note_colon"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtNote"
                    style="@style/CommonText.Style.14sp"
                    android:includeFontPadding="false"
                    android:singleLine="false"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_12sp"
                    android:textColor="@color/color2D2D2D"
                    android:text="@string/lbl_desc"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPay"
                    style="@style/MaterialButton.CornerRadius"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:text="@string/lbl_pay"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edtPhone" />


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

         