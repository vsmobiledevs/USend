<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

    

                 
                            
                                                              

                 
                           
                                                                     

           

    <LinearLayout style="@style/match"
        android:orientation="vertical" android:tag="layout/activity_forgot_password_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <include android:id="@+id/toolbarForgotPass"
            layout="@layout/app_toolbar"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/match"
            android:background="@color/colorWhite"
            tools:context=".views.userauth.ForgotPasswordActivity">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSignUpTitle"
                style="@style/Activity.Title.Text.32sp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:text="@string/lbl_forgot_password_"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtForgotDesc"
                style="@style/CommonText.Style.16sp"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="start"
                android:text="@string/lbl_send_password"
                android:textColor="@color/color802D2D2D"
                android:textSize="@dimen/dimen_14sp"
                app:fontFamily="@font/poppins_regular"
                android:layout_marginTop="@dimen/dimen_10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtSignUpTitle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtEmailTitle"
                style="@style/inputField.Title.14sp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_35dp"
                android:text="@string/lbl_email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtForgotDesc" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtEmail"
                style="@style/inputField.16sp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:hint="@string/lbl_enter_your_email"
                android:inputType="textEmailAddress"
                android:tag="binding_1"           
                android:imeOptions="actionDone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtEmailTitle" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmit"
                style="@style/MaterialButton.CornerRadius"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:tag="binding_2"                               
                android:text="@string/lbl_submit"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edtEmail"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
         