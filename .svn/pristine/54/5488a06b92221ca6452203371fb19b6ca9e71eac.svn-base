<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                 
                             
                             

                 
                               
                             

                 
                          
                             

                                                            

                                                

           

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvPackage"
        style="@style/MaterialCardStyle"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:tag="layout/row_mailbox_item_0"                                                                                     
        app:cardUseCompatPadding="false"  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15dp"
                android:layout_marginEnd="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtPackageNumberTitle"
                    style="@style/CommonText.Style.SemiBold.16sp"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@string/lbl_package_number"
                    android:textColor="@color/color2D2D2D"
                    android:textSize="@dimen/dimen_14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtPackageID"
                    style="@style/CommonText.Style.SemiBold.16sp"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:gravity="center"
                    android:text="#PKG1236"
                    android:textAlignment="center"
                    android:textColor="@color/color154A99"
                    android:textSize="@dimen/dimen_14sp"
                    app:layout_constraintStart_toEndOf="@id/txtPackageNumberTitle"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp"
                    android:button="@drawable/radio_button_selector"
                    android:focusable="false"
                    android:clickable="false"
                    android:tag="binding_1"        
                                                        
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toEndOf="@id/txtPackageID"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtSplitStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color5A9E41"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/lbl_split_processing"
                    android:background="@drawable/ic_split_package"
                    android:gravity="center"
                    android:tag="binding_2"        
                    android:textSize="@dimen/dimen_12sp"
                    android:paddingTop="@dimen/dimen_7dp"
                    android:paddingBottom="@dimen/dimen_7dp"
                    android:paddingStart="@dimen/dimen_15dp"
                    android:paddingEnd="@dimen/dimen_15dp"
                    app:layout_constraintTop_toBottomOf="@id/txtPackageNumberTitle"
                    app:layout_constraintBottom_toTopOf="@id/barrier"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:layout_marginBottom="@dimen/dimen_12dp"/>

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    android:background="@color/colorTrans"
                    app:constraint_referenced_ids="txtSplitStatus, txtPackageNumberTitle"/>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:background="@color/color1A2D2D2D"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/barrier" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtReceivedDateTitle"
                    style="@style/CommonText.Style.SemiBold.16sp"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:fontFamily="@font/poppins_medium"
                    android:singleLine="true"
                    android:text="@string/lbl_received_date"
                    android:textSize="@dimen/dimen_13sp"
                    app:layout_constraintEnd_toStartOf="@id/txtDaysRemainingTitle"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtReceivedDate"
                    style="@style/CommonText.Style.SemiBold.16sp"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_marginTop="@dimen/dimen_1dp"
                    android:fontFamily="@font/poppins_medium"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/color2D2D2D"
                    android:textSize="@dimen/dimen_13sp"
                    app:layout_constraintEnd_toStartOf="@id/txtDaysRemaining"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtReceivedDateTitle" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtDaysRemainingTitle"
                    style="@style/CommonText.Style.SemiBold.16sp"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:fontFamily="@font/poppins_medium"
                    android:singleLine="true"
                    android:text="@string/lbl_days_remaining"
                    android:textSize="@dimen/dimen_13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/txtReceivedDateTitle"
                    app:layout_constraintTop_toBottomOf="@id/view" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtDaysRemaining"
                    style="@style/CommonText.Style.SemiBold.16sp"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_marginTop="@dimen/dimen_1dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/color154A99"
                    android:textSize="@dimen/dimen_13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@id/txtReceivedDate"
                    app:layout_constraintTop_toBottomOf="@id/txtDaysRemainingTitle" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtDimensionsTitle"
                    style="@style/CommonText.Style.SemiBold.16sp"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:fontFamily="@font/poppins_medium"
                    android:singleLine="true"
                    android:text="@string/lbl_dimensions"
                    android:textSize="@dimen/dimen_13sp"
                    app:layout_constraintEnd_toStartOf="@id/txtDaysRemainingTitle"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtReceivedDate" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtDimensions"
                    style="@style/CommonText.Style.SemiBold.16sp"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_marginTop="@dimen/dimen_1dp"
                    android:fontFamily="@font/poppins_medium"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/color2D2D2D"
                    android:textSize="@dimen/dimen_13sp"
                    app:layout_constraintEnd_toStartOf="@id/txtWeight"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtDimensionsTitle" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtWeightTitle"
                    style="@style/CommonText.Style.SemiBold.16sp"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:fontFamily="@font/poppins_medium"
                    android:singleLine="true"
                    android:text="@string/lbl_weight"
                    android:textSize="@dimen/dimen_13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/txtReceivedDateTitle"
                    app:layout_constraintTop_toBottomOf="@id/txtDaysRemaining" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtWeight"
                    style="@style/CommonText.Style.SemiBold.16sp"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_marginTop="@dimen/dimen_1dp"
                    android:fontFamily="@font/poppins_medium"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/color2D2D2D"
                    android:textSize="@dimen/dimen_13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@id/txtDimensions"
                    app:layout_constraintTop_toBottomOf="@id/txtWeightTitle" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dimen_120dp"
            android:layout_height="@dimen/dimen_120dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="-20dp"
            android:layout_marginBottom="-35dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_box_mailbox" />

    </com.google.android.material.card.MaterialCardView>

         