<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                                
                                                            

                 
                            
                                                         

                                          

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".views.userauth.IntroActivity" android:tag="layout/activity_intro_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/introPager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp"
            app:layout_constraintBottom_toTopOf="@id/intro_indicator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/intro_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            app:dotsColor="@color/colorACB7D2"
            app:dotsCornerRadius="@dimen/dimen_5dp"
            app:dotsSize="@dimen/dimen_10dp"
            app:dotsSpacing="@dimen/dimen_4dp"
            app:dotsWidthFactor="1"
            app:progressMode="false"
            app:selectedDotColor="@color/color154A99"
            android:layout_marginBottom="@dimen/dimen_40dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            app:layout_constraintTop_toBottomOf="@id/introPager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rlBottom"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rlBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/CommonText.Style.SemiBold.16sp"
                android:text="@string/lbl_skip"
                android:layout_alignParentStart="true"
                android:tag="binding_1"                                   
                                                                                                  
                android:layout_marginStart="@dimen/dimen_40dp"
                android:padding="@dimen/dimen_10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/btnNext"
                app:layout_constraintBottom_toBottomOf="@id/btnNext"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                style="@style/MaterialButton.CornerRadius"
                android:layout_alignParentEnd="true"
                android:text="@string/lbl_next"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:tag="binding_2"                                   
                                                                                                  
                android:layout_marginEnd="@dimen/dimen_20dp"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButton
                style="@style/MaterialButton.CornerRadius"
                android:tag="binding_3"                                                           
                android:layout_width="@dimen/dimen_0dp"
                android:layout_marginBottom="@dimen/dimen_20dp"
                                                                                
                android:text="@string/lbl_get_started"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


         