        <item name="cornerRadius">@dimen/dimen_10dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">@dimen/dimen_150dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:elevation">5dp</item>
        <item name="android:drawable">@color/colorTrans</item>
        <item name="android:minHeight">@dimen/dimen_20dp</item>
        <item name="android:paddingTop">@dimen/dimen_12dp</item>
        <item name="android:paddingBottom">@dimen/dimen_12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
    </style>

