<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:theme="@style/AppTheme.AppBarOverlay"
    app:popupTheme="@style/AppTheme.AppBarOverlay"
    android:background="@color/colorWhite"
    android:elevation="@dimen/dimen_0dp"
    app:elevation="@dimen/dimen_0dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/AppTheme.AppBarOverlay"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_10dp"
            android:paddingStart="@dimen/dimen_20sp"
            android:paddingEnd="@dimen/dimen_10dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/icn_back"
            android:layout_gravity="start" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:layout_gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimen_18sp"
            android:fontFamily="@font/poppins_medium"
            tools:text="Title"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtRightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_5dp"
            android:paddingBottom="@dimen/dimen_5dp"
            android:text="@string/lbl_sort_by"
            android:includeFontPadding="false"
            android:visibility="gone"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:textColor="@color/color5A9E41"
            android:textSize="@dimen/dimen_14sp"
            android:fontFamily="@font/poppins_medium" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgNoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bell_normal"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:layout_gravity="right"/>


    </androidx.appcompat.widget.Toolbar>


</com.google.android.material.appbar.AppBarLayout>